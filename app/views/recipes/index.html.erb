<h1>Searching for - <%= @search_term %></h1>
<% if (@recipes.nil? or @recipes == []) %>
<p> <h2>No recipes found.. Sorry</h2></p>
<% else %>
<table border="1">  
  <tr>
		<th>Thumbnail</th>
		<th>Title</th>
		<th>Social rank</th>
	</tr>
	
	<% @recipes.each do |recipe| %>
	<tr>
		<td><%=link_to image_tag(recipe["image_url"],size: "100x100"), recipe["source_url"] %></td>
		<td><%= link_to (sanitize recipe["title"]), recipe["source_url"] %></td>
		<td><%= recipe["social_rank"] %></td>
	</tr>
	<% end %>
<% end %>
</table>